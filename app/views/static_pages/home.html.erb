<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="wrap-home">
  <div class="center jumbotron" style="background-image: url(/assets/home_c.jpg); background-size: cover;background-repeat: no-repeat; opacity: 0.8">
    <h1 style="color:black;">Welcome to the PhotoBoom</h1>
    <br>
    <h2>Social network for photographers. </h2>
    <br><br><br><br>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <br><br><br><br><br>
  </div>
</div>

<% end %>
